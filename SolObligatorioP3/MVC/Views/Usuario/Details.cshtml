@model MVC.Models.Usuario.UsuarioVM

@{
    ViewData["Title"] = "Detalles Usuario";
}

<section class="row pb-4 mt-5">
    <div class="col-12">
        <h1>Detalles</h1>

        <div>
            <h3 class="text-danger">@Html.DisplayFor(model => model.Nombre)</h3>
            <hr />
            <dl class="row fs-5">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.RolUsuario)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.RolUsuario)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="text-success me-2">Editar datos</a>
            @if(Context.Session.GetString("rolLogueado") == "Administrador")
            {
                <a asp-action="ListaUsuarios" class="text-success">Lista Usuarios</a>
            }
        </div>
    </div>
</section>
