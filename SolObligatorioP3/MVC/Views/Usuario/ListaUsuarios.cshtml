@model IEnumerable<MVC.Models.Usuario.UsuarioVM>

@{
    ViewData["Title"] = "ListaUsuarios";
}

<div class="row mt-5 mb-3">
    <div class="col-12">
        <h1>Lista de Usuarios</h1>

        <p class="mb-4 mt-3">
            <a asp-action="Create" class="text-success">Dar alta a nuevo usuario</a>
        </p>

        <table class="table mt-4">
            <thead class="thead-usuarios">
                <tr>
                    <th class="py-3">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="py-3">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th class="py-3">
                        @Html.DisplayNameFor(model => model.RolUsuario)
                    </th>
                    <th class="py-3">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th class="py-3">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="py-3">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td class="py-3">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="py-3">
                            @Html.DisplayFor(modelItem => item.RolUsuario)
                        </td>
                        <td class="py-3">
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="py-3">
                            <div class="d-flex flex-column flex-wrap flex-md-row gap-md-2">
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "text-success" })
                                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "text-success" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "text-success" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

